# Database
DATABASE_URL=postgresql://granada_user:granada_pass@localhost:5432/granada_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Environment
ENVIRONMENT=development
DEBUG=True

# Supabase Configuration
# IMPORTANT: Replace these with your actual Supabase project values
# You can find these in your Supabase project dashboard under Settings > API
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Note: Make sure your Supabase Edge Functions are deployed and active
# The bot-status and search-opportunities functions must be deployed to your Supabase project
# You can deploy them using the Supabase CLI or through the Supabase dashboard